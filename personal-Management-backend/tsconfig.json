{
  "compilerOptions": {
    "target": "ES2018" /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', 'ES2018', 'ES2019', 'ES2020', 'ESNext' */,
    "module": "commonjs" /* Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', 'es2020', or 'ESNext'. */,
    "outDir": "./dist" /* Redirect output structure to the directory. */,
    "rootDir": "./src" /* Specify the root directory of input files. */,
    "strict": true /* Enable all strict type-checking options. */,
    "esModuleInterop": true /* Enable emit interoperability between CommonJS and ES Modules via import = require(). */,
    "skipLibCheck": true /* Skip type checking of declaration files. */,
    "forceConsistentCasingInFileNames": true /* Ensure that casing is correct in imports. */,
    "resolveJsonModule": true /* Enable importing of JSON files as modules. */
    // "baseUrl": "." /* Base directory to resolve non-relative module names. */,
    // "paths": {
    //   "": ["node_modules/", "types/*"]
    // }
  },
  "include": ["src/**/*.ts"] /* Specify the files to include in compilation. */,
  "exclude": [
    "node_modules"
  ] /* Specify the files to exclude from compilation. */
}
